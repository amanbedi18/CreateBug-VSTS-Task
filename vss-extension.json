{
    "manifestVersion": 1,
    "id": "CreateBugTask",
    "name": "Create Bug on Release failure",
    "version": "2.2.1",
    "publisher": "AmanBedi18",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Creates a bug in VSTS on release failure.",
    "repository": {
        "type": "git",
        "uri": "https://github.com/amanbedi18/CreateBug-VSTS-Task"
    },
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "LICENSE"
        }
    },
    "branding": {
        "color": "#511018",
        "theme": "dark"
    },
    "public": true,
    "tags": [
        "release", "bug", "build",
        "create bug", "pipelines",
        "vsts", "yaml", "multi stage",
        "release failure", "alm",
        "ci", "cd", "continuous integration",
        "continuous deployment", "scheduled jobs"
    ],
    "links": {
        "home": {
            "uri": "https://github.com/amanbedi18/repositories/"
        },
        "repository": {
            "uri": "https://github.com/amanbedi18/CreateBug-VSTS-Task"
        },
        "issues": {
            "uri": "https://github.com/amanbedi18/CreateBug-VSTS-Task/issues"
        },
        "getstarted": {
            "uri": "https://github.com/amanbedi18/CreateBug-VSTS-Task//blob/master/README.md"
        }
    },
    "categories": [
        "Build and release"
    ],
    "icons": {
        "default": "icon.png"        
    },
    "files": [
        {
            "path": "buildtask"
        },
        {"path": "images", "addressable": true}
    ],
    "contributions": [
        {
            "id": "custom-build-task",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "buildtask"
            }
        }
    ]
}